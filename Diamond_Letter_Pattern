n = int(input())
for i in range(1, n+1):
    print("_" * ((n+1) - i), end='')
    for j in range(65, (65 + (2 * i) - 1)):
        print(chr(j), end=' ')
    print()
for i in range(1, n):
    print("_" * i, end='')
    for j in range(65, (65 + (((n-1)*2-1) - (i-1) *2))):
        print(chr(j), end=' ')
    print()
